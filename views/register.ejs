<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
</head>
<body class="bg-gradient-to-r from-blue-500 to-indigo-600 min-h-screen flex items-center justify-center p-4">

  <form class="bg-white rounded-lg shadow-lg p-8 max-w-sm w-full space-y-6 transform transition-all duration-500 hover:scale-105">
    <h1 class="text-2xl font-bold text-gray-800 text-center">Register User</h1>
    
    <div class="mb-5">
      <label for="username" class="block mb-2 text-sm font-medium text-gray-900">Your username</label>
      <input type="text" id="username" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-3 placeholder-gray-400" placeholder="Enter username" required />
    </div>
    
    <div class="mb-5">
      <label for="email" class="block mb-2 text-sm font-medium text-gray-900">Your email</label>
      <input type="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-3 placeholder-gray-400" placeholder="name@domain.com" required />
    </div>
    
    <div class="mb-5">
      <label for="password" class="block mb-2 text-sm font-medium text-gray-900">Your password</label>
      <input type="password" id="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-3 placeholder-gray-400" placeholder="Enter password" required />
    </div>
    
    <div class="mb-5">
      <label for="confirm_password" class="block mb-2 text-sm font-medium text-gray-900">Confirm password</label>
      <input type="password" id="confirm_password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-3 placeholder-gray-400" placeholder="Re-enter password" required />
    </div>
    
    <div class="flex items-start mb-5">
      <div class="flex items-center h-5">
        <input id="remember" type="checkbox" value="" class="w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
      </div>
      <label for="remember" class="ml-2 text-sm font-medium text-gray-700">Remember me</label>
    </div>
    
    <button type="submit" class="w-full py-3 px-4 text-white bg-indigo-600 hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-500 focus:outline-none font-semibold rounded-lg text-sm transition duration-200">Submit</button>
  </form>

  <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</body>
</html>
